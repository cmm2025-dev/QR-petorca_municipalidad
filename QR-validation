<!-- index.html -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Validación de Datos</title>
  <style>
    body { font-family: Arial; padding: 20px; }
    input, button { margin: 10px 0; padding: 8px; width: 100%; }
  </style>
</head>
<body>
  <h2>Validación de Datos</h2>
  <label for="codigo">Ingrese su código:</label>
  <input type="text" id="codigo" placeholder="Ej: ABC123">
  <button onclick="validar()">Validar</button>
  <div id="resultado"></div>

  <script>
    const datosValidos = {
      "ABC123": { nombre: "Juan Pérez", estado: "Válido" },
      "XYZ789": { nombre: "Ana Gómez", estado: "Válido" }
    };

    function validar() {
      const codigo = document.getElementById("codigo").value.trim();
      const resultado = document.getElementById("resultado");
      if (datosValidos[codigo]) {
        resultado.innerHTML = `<p><strong>Nombre:</strong> ${datosValidos[codigo].nombre}<br><strong>Estado:</strong> ${datosValidos[codigo].estado}</p>`;
      } else {
        resultado.innerHTML = "<p style='color:red;'>Código no válido</p>";
      }
    }
  </script>
</body>
</html>
